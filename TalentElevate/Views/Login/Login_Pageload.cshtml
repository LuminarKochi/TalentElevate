@model TalentElevate.Models.LoginCredentialClass
@{ ViewBag.Title = "Login_Pageload";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Login</h2>
@using (Html.BeginForm("LoginClick", "Login", FormMethod.Post))
{
<div><label>Username:</label></div>
                <div>
                    @Html.TextBoxFor(m => m.username)
                    @Html.ValidationMessageFor(m => m.username)
                </div>

                <div><label>Password:</label></div>
                 <div>
                  @Html.TextBoxFor(m => m.password)
                  @Html.ValidationMessageFor(m => m.password)
                 </div>

                 <div>
                 <input type="submit" value="Login" />
                  @Html.DisplayFor(m => m.msg)
                 </div>

                 <div>
                     @Html.ActionLink("User Registration", "Insert_Pageload","UserInsert")
                 </div>

                 <div>
                     @Html.ActionLink("Company Registration", "Insert_Pageload","CompanyInsert")
                 </div>
}
