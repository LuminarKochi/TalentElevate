@model List<TalentElevate.Models.AppliedJobsViewClass>

@{
    ViewBag.Title = "Applied Jobs";
}

<h2>Applied Jobs</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>Job Title</th>
                <th>Job Description</th>
                <th>Job Type</th>
                <th>Salary</th>
                <th>Vacancy</th>
                <th>Last Date</th>
                <th>Status</th>
                <th>Applied Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model)
            {
                <tr>
                    <td>@job.companyname</td>
                    <td>@job.jobtitle</td>
                    <td>@job.jobdescription</td>
                    <td>@job.jobtype</td>
                    <td>@job.salary</td>
                    <td>@job.vaccancy</td>
                    <td>@job.lastdate</td>
                    <td>@job.status</td>
                    <td>@job.applieddate</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No jobs found.</p>
}
